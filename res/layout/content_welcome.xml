<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WelcomeActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:showIn="@layout/app_bar_welcome">

    <TextView
        android:id="@+id/TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wlecome"
        android:textColor="#ffff"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/TITLE2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Our Current System Status,"
        android:textColor="#ffff"
        android:textStyle="italic"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        >


        <TextView
            android:id="@+id/SLOT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:text="Slot No 1 :"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/SLOT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/SLOT1"
            android:layout_marginTop="75dp"
            android:text="Slot No 2 :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SLOT3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/SLOT2"
            android:layout_marginTop="130dp"
            android:text="Slot No 3 :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SLOT4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/SLOT1"
            android:layout_marginTop="185dp"
            android:text="Slot No 4 :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SLOT5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/SLOT1"
            android:layout_marginTop="240dp"
            android:text="Slot No 5 :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SLOT6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/SLOT1"
            android:layout_marginTop="295dp"
            android:text="Slot No 6 :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/STATUS1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Full"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/STATUS2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Full"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/STATUS3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Full"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/STATUS4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Full"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/STATUS5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Empty"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/STATUS6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentStart="true"
            android:text="Empty"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/BTN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/BTN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/BTN3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/BTN4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"

            />

        <Button
            android:id="@+id/BTN5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/BTN6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentStart="true"
            android:text="Reserve"
            android:background="@drawable/my_button_background_selector"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            />



    </RelativeLayout>
</android.widget.LinearLayout>